# Dockerfile for Purple Agent

FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy project files
COPY pyproject.toml ./
COPY uv.lock ./
COPY LICENSE.md ./
COPY README.md ./
COPY src/purple ./src/purple/

# Install dependencies using uv
# Install the purple agent dependencies (a2a-sdk[http-server]>=0.3.0, uvicorn>=0.30.0)
RUN uv pip install --system -e ".[purple]"

# Expose port 9010 for A2A server (Purple Agent standard)
EXPOSE 9010

# Run the purple agent server
# Use python -m to run as module, binding to all interfaces on port 9010
CMD ["python", "-m", "purple.server", "--host", "0.0.0.0", "--port", "9010"]